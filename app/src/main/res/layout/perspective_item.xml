<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/cardView_margin"
    tools:context=".BrowseNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/brief_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/brief_article_title_padding"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.BriefArticle.Title.Perspective"/>

        <ImageView
            android:id="@+id/brief_article_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/brief_article_thumbnail_height"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:contentDescription="@string/content_description_article_thumbnail"/>

    </LinearLayout>

</android.support.v7.widget.CardView>