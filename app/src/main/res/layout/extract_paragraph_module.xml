<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="@dimen/module_margin_top"
    android:layout_marginBottom="@dimen/module_margin_bottom"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardBackgroundColor="@color/annotation_text_background_color">

    <TextView
        android:id="@+id/extract_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="@integer/paragraph_line_spacing_multiplier"
        android:layout_margin="@dimen/extract_paragraph_margin"
        android:textAppearance="@style/TextAppearance.Paragraph.Extract"/>

</android.support.v7.widget.CardView>