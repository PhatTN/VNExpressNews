<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Only needed for pre-L -->
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/Widget.VNExpress.EditText</item>
    </style>

    <style name="BaseWidget" parent="Theme.AppCompat.NoActionBar" />

    <!-- Base application theme. -->
    <style name="Theme.VNExpress.Base" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.VNExpress" parent="Theme.VNExpress.Base" />

    <style name="Theme.VNExpress.Widget" parent="BaseWidget" />

    <style name="Toolbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/toolbar_text_color_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color_secondary</item>
    </style>
    <style name="Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Activities -->
    <style name="Theme.VNExpress.Welcome" parent="Theme.VNExpress">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="Theme.VNExpress.BrowseNews" parent="Theme.VNExpress">
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="Theme.VNExpress.DetailArticle" parent="Theme.VNExpress">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="Theme.VNExpress.Comment" parent="Theme.VNExpress">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <!-- Body content -->
    <style name="Widget.VNExpress.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="TextAppearance.Default" parent="">
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="16">@string/font_fontFamily_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.BriefArticle.Title" parent="TextAppearance.Default">
        <item name="android:fontFamily" tools:targetApi="16">@string/font_fontFamily_light</item>
        <item name="android:textColor">@color/article_title_text</item>
    </style>

    <style name="TextAppearance.BriefArticle.Title.Main" parent="TextAppearance.BriefArticle.Title">
        <item name="android:textColor">@color/main_article_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.BriefArticle.Title.Perspective" parent="TextAppearance.BriefArticle.Title">
        <item name="android:textSize">@dimen/app_text_size_xxlarge</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Article.Title" parent="TextAppearance.Default">
        <item name="android:textSize">@dimen/app_text_size_xxlarge</item>
        <item name="android:fontFamily" tools:targetApi="16">@string/font_fontFamily_condensed</item>
        <item name="android:textColor">@color/article_title_text</item>
    </style>

    <style name="TextAppearance.Article.Lead" parent="TextAppearance.Default">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily" tools:targetApi="16">@string/font_fontFamily_condensed</item>
        <item name="android:textColor">@color/article_lead_text_color</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBar.Indeterminate" parent="Widget.AppCompat.ProgressBar" />

    <!-- Paragraph -->
    <style name="TextAppearance.Paragraph" parent="TextAppearance.Default">
        <item name="android:textSize">@dimen/app_text_size_large</item>
        <item name="android:textColor">@color/paragraph_text_color</item>
        <item name="android:fontFamily" tools:targetApi="16">@string/font_fontFamily_condensed</item>
    </style>

    <style name="TextAppearance.Paragraph.Extract" />

    <style name="TextAppearance.Paragraph.AnnotationText" />

    <style name="LineSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_separator_height</item>
        <item name="android:background">@color/sub_header_text_color</item>
        <item name="android:layout_marginTop">@dimen/line_separator_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/line_separator_horizontal_margin</item>
    </style>
    <style name="Theme.VNExpress.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VNExpress.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
